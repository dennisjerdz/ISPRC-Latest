@model ISPRC.Models.Bird
@{
    ViewBag.Title = "Edit";
}
<div class="row">
    <div class="col-md-12">
        <h3 class="marginTop40"><a href="@Url.Action("Index")">Racers</a>&emsp;>&emsp;Edit Racer</h3>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-5">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model=>model.BirdId)
            @Html.HiddenFor(model => model.DateCreated)
            @Html.HiddenFor(model => model.OwnerId)

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <div class="col-md-12">
                        @Html.LabelFor(model => model.BirdName, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.BirdName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.BirdName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-6 col-md-6">
                        <input type="submit" value="Save" class="btn btn-success btn-block" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
